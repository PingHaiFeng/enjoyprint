/* pages/goupload/pic_upload/pic_upload.wxss */

.picture-wrp {
  background-color: #fff;
  width: 100%;

  margin: 20rpx 0;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20rpx;
}

.mid-wrp-title {
  font-size: 32rpx;
  margin: 10rpx 20rpx;
}

.items-wrp {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.pic-item {
  background-color: #f5f5f5;
  width: 200rpx;
  height: 200rpx;
  margin: 5rpx 10rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.icon-add {
  width: 70rpx;
  height: 70rpx;
}

.pic-content {
  width: 200rpx;
  height: 200rpx;
}

.delete-wrp {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 50rpx;
  background-color: rgb(219, 6, 6);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 90%;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
}

.bottom-wrp {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;

}

.btn-confirm {
  background-color: #5f98fd;
  border-radius: 5rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: white;
  font-size: 28rpx;
  margin-left: auto;
}