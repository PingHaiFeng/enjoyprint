/* pages/payover/payover.wxss */
page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #333;
  background-color: #f5f5f5;
}

.container {

  /* position: absolute;
  left: 50%;
  top: 30%; */
  /* transform: translate(-50% -50%); */

  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.top-wrp {
  margin: 30rpx 0;
  display: flex;
  flex-direction: column;
  background-color: #fff;

  width: 90%;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 40rpx;
  height: 350rpx;
  align-items: center;

  font-size: 34rpx;

}

.printer-icon {
  width: 320rpx;
  height: 300rpx;
  opacity: .6;
}

.takeid-wrp {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.txt-take-id {
  font-size: 85rpx;
  margin: 20rpx 0;
  height: 90rpx;
  margin-bottom: 50rpx;
}

.tip {
  color: #a5a5a5;
  font-size: 24rpx;

}

.icon-loading {
  width: 80rpx;
  height: 80rpx;
  margin-top: 50rpx;
  animation: loading 2s infinite;
}

@keyframes loading {
  100% {
    width: 80rpx;
    height: 80rpx;
    transform: rotate(360deg);
  }
}

#animat {
  position: relative;
  animation: mymove 3s infinite;
  -webkit-animation: mymove 3s infinite;
  /*Safari and Chrome*/
  animation-direction: alternate;
  /*轮流反向播放动画。*/
  animation-timing-function: ease-in-out;
  /*动画的速度曲线*/
  -webkit-animation: mymove 3s infinite;
  -webkit-animation-direction: alternate;
  /*轮流反向播放动画。*/
  -webkit-animation-timing-function: ease-in-out;
  /*动画的速度曲线*/
}

@keyframes mymove {
  0% {
    transform: scale(1);
    /*开始为原始大小*/
  }

  25% {
    transform: scale(1.1);
    /*放大1.1倍*/
  }

  50% {
    transform: scale(1);
  }

  75% {
    transform: scale(1.1);
  }

}
