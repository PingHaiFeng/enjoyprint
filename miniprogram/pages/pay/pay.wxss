Page {
  width: 100%;
  height: 100%;

  font-size: 32rpx;
  color: rgb(32, 32, 32);
  background-color: #f5f5f5;
}

.pay {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;

  align-items: center;
  height: 300rpx;
  width: 100%;
}

.pay-price {
  margin-top: 60rpx;
  color: red;
  font-size:70rpx;
}
.store{
  font-size: 34rpx;
  margin: 10rpx 0;
}
.current-printer{
font-size: 26rpx;
  color: #bfbfbf;
}
.tool-wrp{
  width: 90%;
  margin: 20rpx auto;
background-color: #fff;
border-radius: 15rpx;
font-size: 30rpx;

}
.tool-item{
height: 90rpx;
display: flex;
align-items: center;
box-sizing: border-box;
padding: 0 30rpx;
box-sizing: border-box;
justify-content: space-between;
}
.left-tit{
  color: #9b9b9b;
}
.right-tit{
color: #333333;
display: flex;
align-items: center;
}
.pay-type-wrp {
  width:90%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  margin: 0 auto;
  border-radius: 15rpx;
  background-color: #fff;
}

.pay-item {
  display: flex;
  width: 100%;
  flex-direction: row;
align-items: center;
height: 90rpx;


}


.pay-ico {
  height: 45rpx;
  width: 40rpx;
 
  margin-right: 20rpx;
}

.pay-type-select{
  height: 40rpx;
  width: 40rpx;
  margin-left: auto;

}
.pay-type-none-select{
  height:30rpx;
  width: 30rpx;
  margin-left: auto;
  border-radius: 16rpx;
  margin-right: 3rpx;
  border:1rpx #5f98fd solid;
}
.select-ico{
  height: 40rpx;
  width: 40rpx;
}
.arrow-right{
  width: 40rpx;
  height: 40rpx;
}
.goPay {
  display: flex;
  flex-direction: column;
  position: absolute;
  border-radius: 40rpx;
  bottom: 10rpx;
  width: 600rpx;
  height:85rpx;
  left: 50%;
  margin-left: -300rpx;
  background-color: #5f98fd;
}

.goPay text {
  color: #fff;
  margin: auto;
  font-size: 34rpx;
}