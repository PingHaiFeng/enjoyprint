<view class="folder-wrp">

  <view class="folder-item" bindtap="goViewDocList" data-idx="{{index}}" wx:for="{{folderList}}" wx:key="folder_id" wx:for-item="item" wx:for-index="index">
    <image class="icon-folder" src="../../images/folder.png">
    </image>
    <view class="folder-text-wrp">
      <view class="folder-top-bar">
        <text class="fs32 col_32">{{item.name}}</text>
        <image class="icon-hot" wx:if="{{item.ishot==1}}" src="../../images/hot.png"></image>
        <view class="down_share">
          <image src="../../images/download.png" class="down_share_img"></image>
          <image class="down_share_img" src="../../images/share.png"  ></image>
          <!-- <button style="  width:35rpx;height: 35rpx;" bindtap="onShare"  open-type="share"> </button> -->
        

        
        </view>
      </view>
      <text class="create-date fs24 col_999">{{item.create_date}}</text>
      <view class="folder-bottom-bar">
        <text class="read-num fs24 col_999">浏览量：{{item.read_num}}</text>
        <text class="print-num fs24 col_999">打印量{{item.print_num}}</text>
      </view>
    </view>
  </view>

</view>