/* pages/library/list_viewer/list_viewer.wxss */
Page{
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.task-item{
  display: flex;
  padding: 15rpx;
  box-sizing: border-box;
width: 680rpx;
height: 150rpx;
margin: 15rpx 0;
background-color: #fff;
color: #333;
position: relative;
border-radius: 20rpx;
align-items: center;
}
.icon{
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
  z-index: 999;
}
.txt-tile{
  font-size: 30rpx;

}
.del{
  width: 32rpx;
  height: 32rpx;
position: absolute;
right: 12rpx;
top: 12rpx;
}
.btn-wrp{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-conf{
background-color: #5f98fd;
width: 550rpx;
height: 86rpx;
text-align: center;
line-height: 86rpx;

color: white;

border-radius: 43rpx;
font-size: 30rpx;
}
.none{
  width: 100%;
  display: flex;
  margin-top: 400rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
  }
  .none image{
    width:200rpx;
  height: 200rpx;
  }
  .none text{
    margin-top: 30rpx;
    color: #bfbfbf;
    font-size: 30rpx;
  }