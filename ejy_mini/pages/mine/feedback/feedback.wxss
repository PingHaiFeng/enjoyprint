page {
    background-color: #f5f5f5;
    padding: 0;
    margin: 0;
    color: #333;
}

.feedback {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 10rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.feedback textarea {
    box-sizing: border-box;
    padding-top: 30rpx;
    padding-left: 20rpx;
    font-size: 32rpx;
}

.question {
    background-color: #fff;
    width: 100%;
height: 300rpx;
    margin: 20rpx 0;
    border-radius: 20rpx;
}

.question input {
  
    height: 300rpx;
}

.submit_button {
    display: flex;
    z-index: 999;
    justify-content: center;
    align-items: center;
    border-radius: 40rpx;
    height: 80rpx;
    width: 650rpx;
    background: #5f98fd;
    color: white;
    font-size: 34rpx;
    margin-top: 200rpx;
}

.picture-wrp{
    background-color: #fff;
    width: 100%;

    margin: 20rpx 0;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 20rpx;
}
.mid-wrp-title{
    font-size: 32rpx;
    margin:10rpx 20rpx;
}
.items-wrp{
    display: flex;
    width: 100%;
    flex-wrap: wrap;
}
.pic-item{
    background-color: #f5f5f5;
    width:200rpx;
    height: 200rpx;
    margin: 5rpx 10rpx;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}
.icon-add{
width: 70rpx;
height: 70rpx;
}
.pic-content{
    width: 200rpx;
    height: 200rpx;
}
.delete-wrp{
position: absolute;
bottom: 0;
width: 100%;
height: 50rpx;
background-color: rgb(219, 6, 6);
display: flex;
align-items: center;
justify-content: center;
opacity: 90%;
}
.delete-icon{
    width: 40rpx;
    height: 40rpx;
}