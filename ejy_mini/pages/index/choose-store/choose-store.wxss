Page {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;


}
text,view{
  color: #333;
}
.top-bar {
  width: 90%;
  height: 90rpx;
  border-radius: 15rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin: 10rpx auto;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.area {
  display: flex;
  align-items: center;
}

.arrow-right {
  width: 40rpx;
  height: 40rpx;
}

.detail-area {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}

.area-item {

  width: 100%;
  height: 100rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  margin: 10rpx 0;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size:30rpx;
  background-color: #fff;
}
.arrow-right_item{
  margin-left: auto;
  width: 40rpx;
  height: 40rpx;
}
.stores-item {
  font-size: 30rpx;
  width: 80%;
  margin: 40rpx auto;

}